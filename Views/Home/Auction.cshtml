@{ 

} 
@model LoginReg.Models.Auction
@using System.Linq
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Product Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h4>
        <a href="http://localhost:5000/Success">Home</a>
    </h4>
    <h4>
        <a href="http://localhost:5000/Logout">Logout</a>
    </h4>
    <h2>Hello @ViewBag.Name</h2>
    <h1>@ViewBag.CurrentProduct.Product</h1>
    <h4>Auction ends on @ViewBag.CurrentProduct.TimeRemaining.ToShortDateString()</h4>
    <h4>Created By: @ViewBag.CurrentProduct.Users.FirstName</h4>
    <p>Description: @ViewBag.CurrentProduct.Description</p>
    
    <form action="http://localhost:5000/Bid/@ViewBag.CurrentProduct.AuctionID" method="POST">
        Your Bid goes here:
        <input type="number" min="1" value="0.00" name="Amount">
        <a href="http://localhost:5000/Bid">
            <button type="Submit" value="Submit">Bid!</button>
        </a>
    </form>
   
</body>
</html>